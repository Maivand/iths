<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hello_world_text"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_world_text">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hello_world_text">
    </EditText>

    <Button
        android:id="@+id/first_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text"
        android:layout_margin="10dp"
        android:text="@string/first_button"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second_button"
        android:layout_toRightOf="@+id/first_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_text"
        android:layout_margin="10dp"
        android:text="@string/second_button">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/third_button"
        android:text="@string/third_button"
        android:layout_below="@+id/edit_text"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/second_button">
    </Button>


</RelativeLayout>


